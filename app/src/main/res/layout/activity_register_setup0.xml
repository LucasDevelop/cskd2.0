<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".module.login.activity.LoginActivity">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="131dp"
        android:layout_marginTop="40dp"
        android:layout_height="91dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:paddingLeft="26dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/login_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="26dp"
            android:hint="请输入手机号"
            style="@style/Edit2"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
    android:background="@color/text_hint"
    android:layout_width="match_parent"
    android:layout_marginLeft="47dp"
    android:layout_height="1px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="26dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_code"/>

        <EditText
            android:id="@+id/code"
            style="@style/Edit2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_weight="1"
            android:hint="请输入验证码"/>

        <TextView
            android:id="@+id/send_code"
            android:layout_width="90dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_layer_gray"
            android:padding="10dp"
            android:text="发送验证码"
            android:textColor="@color/text_hint"/>
    </LinearLayout>

    <View
        android:background="@color/text_hint"
        android:layout_width="match_parent"
        android:layout_marginLeft="47dp"
        android:layout_height="1px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:paddingLeft="26dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/login_pwd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="26dp"
            android:hint="请输入密码6-16位"
            style="@style/Edit2"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/register"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bt_blue"
        android:layout_width="match_parent"
        android:elevation="2dp"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/banner"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--<TextView-->
        <!--android:id="@+id/register2"-->
        <!--android:text="立即申请"-->
        <!--android:textSize="16sp"-->
        <!--android:background="@drawable/bt_offer"-->
        <!--android:paddingLeft="15dp"-->
        <!--android:paddingRight="15dp"-->
        <!--android:paddingTop="8dp"-->
        <!--android:textColor="#fff"-->
        <!--android:paddingBottom="8dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"/>-->
    </RelativeLayout>
</LinearLayout>